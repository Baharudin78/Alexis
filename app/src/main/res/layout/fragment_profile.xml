<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <eightbitlab.com.blurview.BlurView
        android:id="@+id/blurView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:blurOverlayColor="@color/transparent_expanmenu">
<!--    <com.github.mmin18.widget.RealtimeBlurView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        app:realtimeBlurRadius="20dp"-->
<!--        app:realtimeOverlayColor="@color/transparent_expanmenu" />-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:clickable="true"
        android:focusable="true"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/hGuideTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.15"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/cancel_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.03"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/cancel_mid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.09"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/cancel_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.03"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/cancel_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.1"/>

        <TextView
            android:fontFeatureSettings="tnum"
            android:fontFamily="@font/alexis_gtwalsheim_bold"
            android:id="@+id/txt_wl"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Profile"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/fragment_title_size"
            app:layout_constraintTop_toBottomOf="@id/cancel_mid"
            app:layout_constraintBottom_toTopOf="@id/hGuideTop"/>

        <ImageView
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_cancel"
            app:layout_constraintLeft_toRightOf="@+id/cancel_left"
            app:layout_constraintRight_toLeftOf="@id/cancel_right"
            app:layout_constraintTop_toBottomOf="@id/cancel_top"
            app:layout_constraintBottom_toTopOf="@+id/cancel_mid"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_back"
            app:layout_constraintLeft_toRightOf="@+id/cancel_left"
            app:layout_constraintRight_toLeftOf="@id/cancel_right"
            app:layout_constraintTop_toBottomOf="@id/btn_cancel"
            app:layout_constraintBottom_toBottomOf="@+id/txt_wl"
            app:tint="@color/white" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/hGuideTop"
            app:layout_constraintBottom_toBottomOf="parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/txt_wl"
                app:layout_constraintBottom_toBottomOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:layout_marginEnd="7dp">
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/lshow_name"
                        style="@style/Widget.Design.TextInputLayout"
                        android:textColorHint="@color/white1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:fontFamily="@font/alexis_gtwalsheim_regular"
                            android:paddingStart="10dp"
                            android:paddingEnd="0dp"
                            android:id="@+id/show_name"
                            android:textColor="@color/white"
                            android:backgroundTint="@color/white1"
                            android:layout_width="match_parent"
                            android:inputType="none"
                            android:textSize="15sp"
                            android:editable="false"
                            app:drawableEndCompat="@drawable/ic_pencil"
                            android:layout_height="wrap_content"
                            android:text="Arisa Wanda"
                            android:hint="Name" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/editname_mode"
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/gd_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.75"/>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/input_name"
                            style="@style/Widget.Design.TextInputLayout"
                            android:textColorHint="@color/white1"
                            android:layout_width="0dp"
                            android:layout_marginRight="10dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toLeftOf="@+id/gd_1">

                            <com.google.android.material.textfield.TextInputEditText
                                android:fontFamily="@font/alexis_gtwalsheim_light"
                                android:paddingLeft="10dp"
                                android:id="@+id/ed_name"
                                android:textColor="@color/white"
                                android:backgroundTint="@color/white"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:text="Arisa Wanda"
                                android:hint="Name" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/sumbit_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounder_button_voucher"
                            android:layout_marginBottom="5dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toRightOf="@+id/gd_1"
                            app:layout_constraintRight_toRightOf="parent">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_check"
                                android:layout_margin="8dp"
                                android:paddingBottom="10dp"
                                app:tint="@color/white"
                                app:layout_constraintTop_toTopOf="parent"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <View
                            android:id="@+id/flashing_input_name"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_margin="10dp"
                            android:visibility="gone"
                            android:background="@color/white"
                            app:layout_constraintLeft_toLeftOf="@id/input_name"
                            app:layout_constraintRight_toRightOf="@id/input_name"
                            app:layout_constraintTop_toTopOf="@id/input_name"
                            app:layout_constraintBottom_toBottomOf="@id/input_name"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="3dp"
                            android:layout_marginLeft="7dp"
                            android:layout_marginRight="7dp"
                            android:layout_marginBottom="7dp"
                            android:background="@color/white"
                            app:layout_constraintLeft_toLeftOf="@+id/input_name"
                            app:layout_constraintRight_toRightOf="@id/input_name"
                            app:layout_constraintBottom_toBottomOf="@id/input_name"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.Design.TextInputLayout"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/white1"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:fontFamily="@font/alexis_gtwalsheim_regular"
                        android:paddingStart="10dp"
                        android:paddingEnd="0dp"
                        android:id="@+id/input_email"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/white1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/ic_pencil"
                        android:inputType="none"
                        android:textSize="15sp"
                        android:editable="false"
                        android:text="arisa.wanda@gmail.com"
                        android:hint="Email" />
                </com.google.android.material.textfield.TextInputLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp">
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.Design.TextInputLayout"
                        android:id="@+id/lay_phone"
                        android:layout_marginTop="10dp"
                        android:textColorHint="@color/white1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:fontFamily="@font/alexis_gtwalsheim_regular"
                            android:paddingStart="10dp"
                            android:paddingEnd="0dp"
                            android:id="@+id/input_phone"
                            android:textColor="@color/white"
                            android:backgroundTint="@color/white1"
                            android:layout_width="match_parent"
                            android:drawableEnd="@drawable/ic_pencil"
                            android:layout_height="wrap_content"
                            android:text="+62 812 3456 7890"
                            android:inputType="none"
                            android:textSize="15sp"
                            android:editable="false"
                            android:hint="Phone" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <View android:id="@+id/view_guideline"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        app:layout_constraintTop_toTopOf="@+id/lay_phone"
                        app:layout_constraintBottom_toBottomOf="@+id/lay_phone"/>
                    <TextView
                        android:fontFeatureSettings="tnum" android:fontFamily="@font/alexis_gtwalsheim_regular"
                        android:id="@+id/click_verify"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="not verified yet"
                        android:drawablePadding="5dp"
                        android:layout_marginEnd="40dp"
                        android:textColor="@color/white"
                        android:alpha="0.8"
                        android:textSize="10sp"
                        android:drawableStart="@drawable/ic_little_warning"
                        app:layout_constraintRight_toRightOf="@id/lay_phone"
                        app:layout_constraintTop_toBottomOf="@id/view_guideline"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.Design.TextInputLayout"
                    android:layout_marginTop="10dp"
                    android:textColorHint="@color/white1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:fontFamily="@font/alexis_gtwalsheim_regular"
                        android:paddingStart="10dp"
                        android:paddingEnd="0dp"
                        android:id="@+id/input_password"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/white1"
                        android:drawableEnd="@drawable/ic_pencil"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:editable="false"
                        android:textSize="15sp"
                        android:text="••••••••"
                        android:hint="Password" />
                </com.google.android.material.textfield.TextInputLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp">
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/lshow_brdate"
                        style="@style/Widget.Design.TextInputLayout"
                        android:textColorHint="@color/white1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:fontFamily="@font/alexis_gtwalsheim_regular"
                            android:paddingStart="10dp"
                            android:paddingEnd="0dp"
                            android:id="@+id/show_brdate"
                            android:textColor="@color/white"
                            android:backgroundTint="@color/white1"
                            android:layout_width="match_parent"
                            android:drawableEnd="@drawable/ic_pencil"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:editable="false"
                            android:textSize="15sp"
                            android:text="12 Januari 1990"
                            android:hint="Birthdate" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/editbrdate_mode"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/gd_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.75"/>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/input_brdate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toLeftOf="@+id/gd_2">

                            <androidx.constraintlayout.widget.Guideline
                                android:id="@+id/gd_bdt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintGuide_percent="0.04"/>
                            <TextView
                                android:fontFeatureSettings="tnum" android:fontFamily="@font/alexis_gtwalsheim_light"
                                android:id="@+id/hisasi"
                                android:textColor="@color/white1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Birthdate"
                                android:textSize="12sp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintLeft_toRightOf="@+id/gd_bdt"/>
                            <LinearLayout
                                android:id="@+id/brdate_edittable"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="3"
                                app:layout_constraintTop_toBottomOf="@+id/hisasi">
                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1">
                                    <EditText
                                        android:fontFamily="@font/alexis_gtwalsheim_light"
                                        android:id="@+id/brdate_day"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/white"
                                        android:hint="DD"
                                        android:textColorHint="@color/white1"
                                        android:gravity="center"
                                        android:layout_marginRight="5dp"
                                        android:backgroundTint="@color/white1"
                                        android:inputType="number"
                                        android:maxEms="2"
                                        android:maxLength="2"
                                        android:textSize="15sp"
                                        app:layout_constraintTop_toTopOf="parent"/>
                                    <View
                                        android:id="@+id/line_day"
                                        android:layout_width="0dp"
                                        android:layout_height="3dp"
                                        android:visibility="gone"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginRight="5dp"
                                        android:layout_marginBottom="5dp"
                                        android:background="@color/white"
                                        app:layout_constraintLeft_toLeftOf="@+id/brdate_day"
                                        app:layout_constraintRight_toRightOf="@id/brdate_day"
                                        app:layout_constraintBottom_toBottomOf="@id/brdate_day"/>
                                    <View
                                        android:id="@+id/flashing_day"
                                        android:layout_width="0dp"
                                        android:layout_height="0dp"
                                        android:layout_margin="10dp"
                                        android:visibility="gone"
                                        android:background="@color/white"
                                        app:layout_constraintLeft_toLeftOf="@id/brdate_day"
                                        app:layout_constraintRight_toRightOf="@id/brdate_day"
                                        app:layout_constraintTop_toTopOf="@id/brdate_day"
                                        app:layout_constraintBottom_toBottomOf="@id/brdate_day"/>
                                </androidx.constraintlayout.widget.ConstraintLayout>
                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1">
                                    <EditText
                                        android:fontFamily="@font/alexis_gtwalsheim_light"
                                        android:id="@+id/brdate_month"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/white"
                                        android:hint="MM"
                                        android:textColorHint="@color/white1"
                                        android:gravity="center"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginRight="5dp"
                                        android:backgroundTint="@color/white1"
                                        android:inputType="number"
                                        android:maxEms="2"
                                        android:maxLength="2"
                                        android:textSize="15sp"
                                        app:layout_constraintTop_toTopOf="parent"/>
                                    <View
                                        android:id="@+id/line_month"
                                        android:layout_width="0dp"
                                        android:layout_height="3dp"
                                        android:visibility="gone"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginRight="5dp"
                                        android:layout_marginBottom="5dp"
                                        android:background="@color/white"
                                        app:layout_constraintLeft_toLeftOf="@+id/brdate_month"
                                        app:layout_constraintRight_toRightOf="@id/brdate_month"
                                        app:layout_constraintBottom_toBottomOf="@id/brdate_month"/>
                                    <View
                                        android:id="@+id/flashing_month"
                                        android:layout_width="0dp"
                                        android:layout_height="0dp"
                                        android:layout_margin="10dp"
                                        android:visibility="gone"
                                        android:background="@color/white"
                                        app:layout_constraintLeft_toLeftOf="@id/brdate_month"
                                        app:layout_constraintRight_toRightOf="@id/brdate_month"
                                        app:layout_constraintTop_toTopOf="@id/brdate_month"
                                        app:layout_constraintBottom_toBottomOf="@id/brdate_month"/>
                                </androidx.constraintlayout.widget.ConstraintLayout>
                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1">
                                    <EditText
                                        android:fontFamily="@font/alexis_gtwalsheim_light"
                                        android:id="@+id/brdate_year"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginRight="10dp"
                                        android:textColor="@color/white"
                                        android:hint="YYYY"
                                        android:textColorHint="@color/white1"
                                        android:gravity="center"
                                        android:layout_weight="1"
                                        android:backgroundTint="@color/white1"
                                        android:inputType="number"
                                        android:maxEms="4"
                                        android:maxLength="4"
                                        android:textSize="15sp"
                                        app:layout_constraintTop_toTopOf="parent"/>
                                    <View
                                        android:id="@+id/line_year"
                                        android:layout_width="0dp"
                                        android:layout_height="3dp"
                                        android:visibility="gone"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginRight="5dp"
                                        android:layout_marginBottom="5dp"
                                        android:background="@color/white"
                                        app:layout_constraintLeft_toLeftOf="@+id/brdate_year"
                                        app:layout_constraintRight_toRightOf="@id/brdate_year"
                                        app:layout_constraintBottom_toBottomOf="@id/brdate_year"/>
                                    <View
                                        android:id="@+id/flashing_year"
                                        android:layout_width="0dp"
                                        android:layout_height="0dp"
                                        android:layout_margin="10dp"
                                        android:visibility="gone"
                                        android:background="@color/white"
                                        app:layout_constraintLeft_toLeftOf="@id/brdate_year"
                                        app:layout_constraintRight_toRightOf="@id/brdate_year"
                                        app:layout_constraintTop_toTopOf="@id/brdate_year"
                                        app:layout_constraintBottom_toBottomOf="@id/brdate_year"/>
                                </androidx.constraintlayout.widget.ConstraintLayout>

                            </LinearLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/gd_bdt2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.03"/>

                        <TextView
                            android:fontFeatureSettings="tnum" android:fontFamily="@font/alexis_gtwalsheim_light"
                            android:id="@+id/note"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Please note that you could only update the birthdate once.\nPlease enter the data carefully."
                            app:layout_constraintTop_toBottomOf="@+id/input_brdate"
                            app:layout_constraintLeft_toRightOf="@+id/gd_bdt2"
                            app:layout_constraintRight_toRightOf="parent"
                            android:textColor="@color/white1"
                            android:textSize="12sp"/>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/sumbit_brdate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounder_button_voucher"
                            app:layout_constraintBottom_toTopOf="@+id/note"
                            android:layout_marginBottom="5dp"
                            app:layout_constraintLeft_toRightOf="@+id/gd_2"
                            app:layout_constraintRight_toRightOf="parent">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_check"
                                android:layout_margin="8dp"
                                android:paddingBottom="10dp"
                                app:tint="@color/white"
                                app:layout_constraintTop_toTopOf="parent"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    </eightbitlab.com.blurview.BlurView>
</FrameLayout>