<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/black"
    tools:context=".ui.account.ProfileChangerFragment">


    <eightbitlab.com.blurview.BlurView
        android:id="@+id/blurView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:blurOverlayColor="@color/transparent_expanmenu">
        <!--    <com.github.mmin18.widget.RealtimeBlurView-->
        <!--        android:layout_width="match_parent"-->
        <!--        android:layout_height="match_parent"-->
        <!--        app:realtimeBlurRadius="20dp"-->
        <!--        app:realtimeOverlayColor="@color/transparent_expanmenu" />-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:clickable="true"
            android:focusable="true"
            android:fitsSystemWindows="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/hGuideTop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.15"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/cancel_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.03"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/cancel_mid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.09"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/cancel_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.03"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/cancel_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.1"/>

            <TextView
                android:fontFeatureSettings="tnum"
                android:fontFamily="@font/alexis_gtwalsheim_light"
                android:id="@+id/txt_wl"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center|top"
                android:textSize="@dimen/fragment_title_size"
                app:layout_constraintTop_toBottomOf="@id/cancel_mid"
                app:layout_constraintBottom_toTopOf="@id/hGuideTop"/>

            <ImageView
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_cancel"
                app:layout_constraintLeft_toRightOf="@+id/cancel_left"
                app:layout_constraintRight_toLeftOf="@id/cancel_right"
                app:layout_constraintTop_toBottomOf="@id/cancel_top"
                app:layout_constraintBottom_toTopOf="@+id/cancel_mid"
                app:tint="@color/white" />

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_back"
                app:layout_constraintLeft_toRightOf="@+id/cancel_left"
                app:layout_constraintRight_toLeftOf="@id/cancel_right"
                app:layout_constraintTop_toBottomOf="@id/btn_cancel"
                app:layout_constraintBottom_toBottomOf="@+id/txt_wl"
                app:tint="@color/white" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/hGuideTop"
                app:layout_constraintBottom_toBottomOf="parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@+id/txt_wl"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/input_satu"
                            style="@style/Widget.Design.TextInputLayout"
                            android:textColorHint="@color/white1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent">

                            <com.google.android.material.textfield.TextInputEditText
                                android:fontFamily="@font/alexis_gtwalsheim_light"
                                android:paddingStart="10dp"
                                android:paddingEnd="0dp"
                                android:id="@+id/ed_satu"
                                android:enabled="false"
                                android:hint="Old Number"
                                android:inputType="none"
                                android:focusable="true"
                                android:textColor="@color/white"
                                android:textSize="13sp"
                                android:backgroundTint="@color/white1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </com.google.android.material.textfield.TextInputLayout>
                        <View
                            android:id="@+id/line_satu"
                            android:layout_width="0dp"
                            android:layout_height="3dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@color/white"
                            app:layout_constraintLeft_toLeftOf="@+id/input_satu"
                            app:layout_constraintRight_toRightOf="@id/input_satu"
                            app:layout_constraintBottom_toBottomOf="@id/input_satu"/>
                        <View
                            android:id="@+id/flashing_satu"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_margin="10dp"
                            android:visibility="gone"
                            android:background="@color/white"
                            app:layout_constraintLeft_toLeftOf="@id/input_satu"
                            app:layout_constraintRight_toRightOf="@id/input_satu"
                            app:layout_constraintTop_toTopOf="@id/input_satu"
                            app:layout_constraintBottom_toBottomOf="@id/input_satu"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/input_dua"
                            style="@style/Widget.Design.TextInputLayout"
                            android:textColorHint="@color/white1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent">

                            <com.google.android.material.textfield.TextInputEditText
                                android:fontFamily="@font/alexis_gtwalsheim_light"
                                android:paddingLeft="10dp"
                                android:id="@+id/ed_dua"
                                android:hint="New Number"
                                android:textColor="@color/white"
                                android:textSize="13sp"
                                android:inputType="number"
                                android:backgroundTint="@color/white1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </com.google.android.material.textfield.TextInputLayout>
                        <View
                            android:id="@+id/line_dua"
                            android:layout_width="0dp"
                            android:layout_height="3dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@color/white"
                            app:layout_constraintLeft_toLeftOf="@+id/input_dua"
                            app:layout_constraintRight_toRightOf="@id/input_dua"
                            app:layout_constraintBottom_toBottomOf="@id/input_dua"/>
                        <View
                            android:id="@+id/flashing_dua"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_margin="10dp"
                            android:visibility="gone"
                            android:background="@color/white"
                            app:layout_constraintLeft_toLeftOf="@id/input_dua"
                            app:layout_constraintRight_toRightOf="@id/input_dua"
                            app:layout_constraintTop_toTopOf="@id/input_dua"
                            app:layout_constraintBottom_toBottomOf="@id/input_dua"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/input_tiga"
                            style="@style/Widget.Design.TextInputLayout"
                            android:textColorHint="@color/white1"
                            app:passwordToggleTint="@color/white1"
                            app:passwordToggleEnabled="true"
                            app:passwordToggleDrawable="@drawable/custom_password_eye"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent">

                            <com.google.android.material.textfield.TextInputEditText
                                android:fontFamily="@font/alexis_gtwalsheim_light"
                                android:paddingLeft="10dp"
                                android:id="@+id/ed_tiga"
                                android:textColor="@color/white"
                                android:textSize="13sp"
                                android:hint="password"
                                android:inputType="textPassword"
                                android:backgroundTint="@color/white1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </com.google.android.material.textfield.TextInputLayout>
                        <View
                            android:id="@+id/line_tiga"
                            android:layout_width="0dp"
                            android:layout_height="3dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@color/white"
                            app:layout_constraintLeft_toLeftOf="@+id/input_tiga"
                            app:layout_constraintRight_toRightOf="@id/input_tiga"
                            app:layout_constraintBottom_toBottomOf="@id/input_tiga"/>
                        <View
                            android:id="@+id/flashing_tiga"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_margin="10dp"
                            android:visibility="gone"
                            android:background="@color/white"
                            app:layout_constraintLeft_toLeftOf="@id/input_tiga"
                            app:layout_constraintRight_toRightOf="@id/input_tiga"
                            app:layout_constraintTop_toTopOf="@id/input_tiga"
                            app:layout_constraintBottom_toBottomOf="@id/input_tiga"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="30dp">

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/cw"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.72"/>

                        <ImageView
                            android:id="@+id/btn_check"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/rounder_button_whiteborder_25dp"
                            android:src="@drawable/ic_flying_message"
                            android:padding="8dp"
                            app:tint="@color/white"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toRightOf="@+id/cw"
                            app:layout_constraintRight_toRightOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:fontFeatureSettings="tnum" android:fontFamily="@font/alexis_gtwalsheim_regular"
                        android:id="@+id/info_editing_fragment"
                        android:layout_width="match_parent"
                        android:paddingLeft="9dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:textSize="12sp"
                        android:textColor="@color/white1"/>
                </LinearLayout>
            </ScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </eightbitlab.com.blurview.BlurView>
</FrameLayout>