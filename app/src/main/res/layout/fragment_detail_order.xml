<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.account.DetailOrderFragment">

    <eightbitlab.com.blurview.BlurView
        android:id="@+id/blurView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:blurOverlayColor="@color/transparent_expanmenu">


<!--    <com.github.mmin18.widget.RealtimeBlurView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        app:realtimeBlurRadius="20dp"-->
<!--        app:realtimeOverlayColor="@color/transparent_expanmenu" />-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:fitsSystemWindows="true"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/hGuideTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.15"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/cancel_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.03"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/cancel_mid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.09"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/cancel_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.03"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/cancel_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.1"/>

        <TextView
            android:fontFeatureSettings="tnum"
            android:fontFamily="@font/alexis_gtwalsheim_bold"
            android:id="@+id/txt_wl"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Order"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/fragment_title_size"
            app:layout_constraintTop_toBottomOf="@id/cancel_mid"
            app:layout_constraintBottom_toTopOf="@id/hGuideTop"/>

        <ImageView
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_cancel"
            app:layout_constraintLeft_toRightOf="@+id/cancel_left"
            app:layout_constraintRight_toLeftOf="@id/cancel_right"
            app:layout_constraintTop_toBottomOf="@id/cancel_top"
            app:layout_constraintBottom_toTopOf="@+id/cancel_mid"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_back"
            app:layout_constraintLeft_toRightOf="@+id/cancel_left"
            app:layout_constraintRight_toLeftOf="@id/cancel_right"
            app:layout_constraintTop_toBottomOf="@id/btn_cancel"
            app:layout_constraintBottom_toBottomOf="@+id/txt_wl"
            app:tint="@color/white" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/in_fo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/hGuideTop">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_info_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.04" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_btn_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.96" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.75" />

            <TextView
                android:id="@+id/info_detail_order"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:alpha="0.8"
                android:fontFamily="@font/alexis_gtwalsheim_regular"
                android:fontFeatureSettings="tnum"
                android:paddingStart="15dp"
                android:paddingEnd="10dp"
                android:paddingVertical="5dp"
                android:text="@string/en_infodetailorder"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/gl_info_left"
                app:layout_constraintRight_toLeftOf="@+id/gl_info"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/btn_return_guide"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:background="@drawable/rounder_button_whiteborder_25dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/gl_info"
                app:layout_constraintRight_toLeftOf="@+id/gl_btn_right"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_box_return"
                    app:tint="@color/white" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_margin="20dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="18dp"
            app:cardBackgroundColor="@color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/in_fo">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/nestedScrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="10dp"
                        android:paddingTop="20dp"
                        android:paddingEnd="0dp"
                        android:background="@drawable/rounder_white_transparent"
                        android:paddingBottom="20dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp">

                            <androidx.constraintlayout.widget.Guideline
                                android:id="@+id/maxDel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintGuide_percent="0.95" />

                            <TextView
                                android:id="@+id/order_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/alexis_gtwalsheim_regular"
                                android:fontFeatureSettings="tnum"
                                android:paddingStart="5dp"
                                android:paddingEnd="0dp"
                                android:text="15 May 20"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/order_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/alexis_gtwalsheim_regular"
                                android:fontFeatureSettings="tnum"
                                android:text="Delivered"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                app:layout_constraintRight_toLeftOf="@+id/maxDel"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/order_code"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/alexis_gtwalsheim_regular"
                                android:fontFeatureSettings="tnum"
                                android:paddingStart="5dp"
                                android:paddingTop="5dp"
                                android:paddingEnd="0dp"
                                android:paddingBottom="10dp"
                                android:text="No YDGU237DG7231G"
                                android:textColor="@color/white1"
                                android:textSize="12sp"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/order_date" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/order_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:itemCount="3"
                            android:isScrollContainer="false"
                            tools:listitem="@layout/item_order_detail" />

                        <View
                            android:layout_width="150dp"
                            android:layout_height="1dp"
                            android:layout_gravity="right"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@color/white"
                            app:layout_constraintBottom_toTopOf="@+id/rp"
                            app:layout_constraintRight_toRightOf="parent" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/subtotal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            app:layout_constraintTop_toTopOf="parent">

                            <androidx.constraintlayout.widget.Guideline
                                android:id="@+id/maxA"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintGuide_percent="0.05" />

                            <androidx.constraintlayout.widget.Guideline
                                android:id="@+id/imgR"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintGuide_percent="0.3" />

                            <androidx.constraintlayout.widget.Guideline
                                android:id="@+id/mid"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintGuide_percent="0.7" />

                            <androidx.constraintlayout.widget.Guideline
                                android:id="@+id/maxB"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintGuide_percent="0.98" />

                            <TextView
                                android:id="@+id/order_subtotal"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/alexis_gtwalsheim_regular"
                                android:fontFeatureSettings="tnum"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="Subtotal"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                app:layout_constraintLeft_toRightOf="@+id/imgR"
                                app:layout_constraintRight_toLeftOf="@+id/mid"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/rp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/alexis_gtwalsheim_regular"
                                android:fontFeatureSettings="tnum"
                                android:gravity="right"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="Rp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                app:layout_constraintLeft_toRightOf="@+id/mid"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/order_price"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/alexis_gtwalsheim_regular"
                                android:fontFeatureSettings="tnum"
                                android:gravity="right"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="240.000"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                app:layout_constraintLeft_toRightOf="@+id/rp"
                                app:layout_constraintRight_toLeftOf="@+id/maxB"
                                app:layout_constraintTop_toTopOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/shipping"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            app:layout_constraintTop_toTopOf="parent">

                            <androidx.constraintlayout.widget.Guideline
                                android:id="@+id/maxA1s"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintGuide_percent="0.05" />

                            <androidx.constraintlayout.widget.Guideline
                                android:id="@+id/imgR1s"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintGuide_percent="0.3" />

                            <androidx.constraintlayout.widget.Guideline
                                android:id="@+id/mid1s"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintGuide_percent="0.7" />

                            <androidx.constraintlayout.widget.Guideline
                                android:id="@+id/maxB1s"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintGuide_percent="0.98" />

                            <TextView
                                android:id="@+id/order_shipping"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/alexis_gtwalsheim_regular"
                                android:fontFeatureSettings="tnum"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="Shipping"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                app:layout_constraintLeft_toRightOf="@+id/imgR1s"
                                app:layout_constraintRight_toLeftOf="@+id/mid1s"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/rp1s"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/alexis_gtwalsheim_regular"
                                android:fontFeatureSettings="tnum"
                                android:gravity="right"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="Rp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                app:layout_constraintLeft_toRightOf="@+id/mid1s"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/shipping_price"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/alexis_gtwalsheim_regular"
                                android:fontFeatureSettings="tnum"
                                android:gravity="right"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="10.000"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                app:layout_constraintLeft_toRightOf="@+id/rp1s"
                                app:layout_constraintRight_toLeftOf="@+id/maxB1s"
                                app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/voucher"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            app:layout_constraintTop_toTopOf="parent">

                            <androidx.constraintlayout.widget.Guideline
                                android:id="@+id/maxA1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintGuide_percent="0.05" />

                            <androidx.constraintlayout.widget.Guideline
                                android:id="@+id/imgR1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintGuide_percent="0.3" />

                            <androidx.constraintlayout.widget.Guideline
                                android:id="@+id/mid1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintGuide_percent="0.7" />

                            <androidx.constraintlayout.widget.Guideline
                                android:id="@+id/maxB1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintGuide_percent="0.98" />

                            <TextView
                                android:id="@+id/order_voucher"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/alexis_gtwalsheim_regular"
                                android:fontFeatureSettings="tnum"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="Voucher"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                app:layout_constraintLeft_toRightOf="@+id/imgR1"
                                app:layout_constraintRight_toLeftOf="@+id/mid1"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/rp1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/alexis_gtwalsheim_regular"
                                android:fontFeatureSettings="tnum"
                                android:gravity="right"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="Rp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                app:layout_constraintLeft_toRightOf="@+id/mid1"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/voucher_price"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/alexis_gtwalsheim_regular"
                                android:fontFeatureSettings="tnum"
                                android:gravity="right"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="-30.000"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                app:layout_constraintLeft_toRightOf="@+id/rp1"
                                app:layout_constraintRight_toLeftOf="@+id/maxB1"
                                app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <View
                            android:layout_width="150dp"
                            android:layout_height="1dp"
                            android:layout_gravity="right"
                            android:layout_marginBottom="10dp"
                            android:background="@color/white"
                            app:layout_constraintBottom_toTopOf="@+id/rp3"
                            app:layout_constraintRight_toRightOf="parent" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/total"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            app:layout_constraintTop_toTopOf="parent">

                            <androidx.constraintlayout.widget.Guideline
                                android:id="@+id/maxA3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintGuide_percent="0.05" />

                            <androidx.constraintlayout.widget.Guideline
                                android:id="@+id/imgR3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintGuide_percent="0.3" />

                            <androidx.constraintlayout.widget.Guideline
                                android:id="@+id/mid3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintGuide_percent="0.7" />

                            <androidx.constraintlayout.widget.Guideline
                                android:id="@+id/maxB3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintGuide_percent="0.98" />

                            <TextView
                                android:id="@+id/order_total"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/alexis_gtwalsheim_regular"
                                android:fontFeatureSettings="tnum"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="Total"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                app:layout_constraintLeft_toRightOf="@+id/imgR3"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/order_total2"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:fontFamily="@font/alexis_gtwalsheim_light"
                                android:fontFeatureSettings="tnum"
                                android:gravity="bottom"
                                android:paddingStart="5dp"
                                android:paddingTop="7dp"
                                android:paddingEnd="0dp"
                                android:paddingBottom="7dp"
                                android:text="(incl PPN)"
                                android:textColor="@color/white1"
                                android:textSize="10sp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="@id/order_total"
                                app:layout_constraintLeft_toRightOf="@+id/order_total"
                                app:layout_constraintRight_toLeftOf="@+id/mid3"
                                app:layout_constraintTop_toTopOf="@id/order_total" />

                            <TextView
                                android:id="@+id/rp3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/alexis_gtwalsheim_regular"
                                android:fontFeatureSettings="tnum"
                                android:gravity="right"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="Rp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                app:layout_constraintLeft_toRightOf="@+id/mid3"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/total_price"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/alexis_gtwalsheim_regular"
                                android:fontFeatureSettings="tnum"
                                android:gravity="right"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="210.000"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                app:layout_constraintLeft_toRightOf="@+id/rp3"
                                app:layout_constraintRight_toLeftOf="@+id/maxB3"
                                app:layout_constraintTop_toTopOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            app:layout_constraintTop_toTopOf="parent">

                            <androidx.constraintlayout.widget.Guideline
                                android:id="@+id/maxB3sw"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintGuide_percent="0.98" />

                            <TextView
                                android:id="@+id/money_saving"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/alexis_gtwalsheim_regular"
