<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parent"
    tools:context=".ui.shopping_bag.ReviewOrderSummaryFragment">
    <com.github.mmin18.widget.RealtimeBlurView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:realtimeBlurRadius="20dp"
        app:realtimeOverlayColor="@color/transparent_expanmenu" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:fitsSystemWindows="true"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/hGuideTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.15"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/cancel_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.03"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/cancel_mid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.09"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/cancel_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.03"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/cancel_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.1"/>

        <TextView
            android:fontFeatureSettings="tnum" android:id="@+id/txt_wl"
            android:fontFamily="@font/alexis_gtwalsheim_bold"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Review Order Summary"
            android:textColor="@color/white"
            android:gravity="center|top"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/cancel_mid"
            app:layout_constraintBottom_toTopOf="@id/hGuideTop"/>

        <ImageView
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_cancel"
            app:layout_constraintLeft_toRightOf="@+id/cancel_left"
            app:layout_constraintRight_toLeftOf="@id/cancel_right"
            app:layout_constraintTop_toBottomOf="@id/cancel_top"
            app:layout_constraintBottom_toTopOf="@+id/cancel_mid"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_back"
            app:layout_constraintLeft_toRightOf="@+id/cancel_left"
            app:layout_constraintRight_toLeftOf="@id/cancel_right"
            app:layout_constraintTop_toBottomOf="@id/btn_cancel"
            app:layout_constraintBottom_toBottomOf="@+id/txt_wl"
            app:tint="@color/white" />

        <RelativeLayout
            android:id="@+id/reviewOrderCard"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintBottom_toTopOf="@+id/footer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_wl" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/card_order_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounder_white_transparent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="0dp"
                    android:layout_height="125dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_image_only_but_bigger" />

                <View
                    android:id="@+id/firstLine"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/white"
                    android:layout_marginTop="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/recyclerView" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/middleGuide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.38" />

                <TextView
                    android:id="@+id/address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:fontFamily="@font/alexis_gtwalsheim_bold"
                    android:textColor="@color/white"
                    android:gravity="start"
                    android:paddingStart="20dp"
                    android:paddingEnd="0dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintEnd_toStartOf="@+id/middleGuide"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/firstLine" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/alexis_gtwalsheim_regular"
                    android:text="Alicia Wandow\nTaman Ratu Indah Blok E1 no 18\nKembangan, Jakarta Barat\nDKI Jakarta 11730"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/middleGuide"
                    app:layout_constraintTop_toBottomOf="@+id/firstLine" />

                <View
                    android:id="@+id/secondLine"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/white"
                    android:layout_marginTop="38dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="195dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/middleGuide"
                    app:layout_constraintTop_toBottomOf="@+id/secondLine">

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/batx1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.4" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/batx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.45" />

                    <TextView
                        android:id="@+id/s1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/alexis_gtwalsheim_regular"
                        android:fontFeatureSettings="tnum"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="Product"
                        android:textColor="@color/white"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/batx"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/rp1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/alexis_gtwalsheim_regular"
                        android:fontFeatureSettings="tnum"
                        android:gravity="right"
                        android:padding="5dp"
                        android:text="Rp"
                        android:textColor="@color/white"
                        app:layout_constraintLeft_toRightOf="@+id/batx"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/nom_product"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="10dp"
                        android:fontFamily="@font/alexis_gtwalsheim_regular"
                        android:fontFeatureSettings="tnum"
                        android:gravity="right"
                        android:padding="5dp"
                        android:text="80.000"
                        android:textColor="@color/white"
                        app:layout_constraintLeft_toRightOf="@+id/rp1"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/s2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/alexis_gtwalsheim_regular"
                        android:fontFeatureSettings="tnum"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="Shipping"
                        android:textColor="@color/white"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/batx"
                        app:layout_constraintTop_toBottomOf="@+id/nom_product" />

                    <TextView
                        android:id="@+id/rp2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:fontFamily="@font/alexis_gtwalsheim_regular"
                        android:fontFeatureSettings="tnum"
                        android:gravity="right"
                        android:padding="5dp"
                        android:text="Rp"
                        android:textColor="@color/white"
                        app:layout_constraintLeft_toRightOf="@+id/batx"
                        app:layout_constraintTop_toBottomOf="@+id/nom_product" />

                    <TextView
                        android:id="@+id/nom_shipping"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:fontFamily="@font/alexis_gtwalsheim_regular"
                        android:fontFeatureSettings="tnum"
                        android:gravity="right"
                        android:padding="5dp"
                        android:text="10.000"
                        android:textColor="@color/white"
                        app:layout_constraintLeft_toRightOf="@+id/rp2"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/nom_product" />

                    <TextView
                        android:id="@+id/s3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/alexis_gtwalsheim_regular"
                        android:fontFeatureSettings="tnum"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="Voucher"
                        android:textColor="@color/white"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/batx"
                        app:layout_constraintTop_toBottomOf="@+id/s2" />

                    <TextView
                        android:id="@+id/rp3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:fontFamily="@font/alexis_gtwalsheim_regular"
                        android:fontFeatureSettings="tnum"
                        android:gravity="end"
                        android:padding="5dp"
                        android:text="Rp"
                        android:textColor="@color/white"
                        app:layout_constraintLeft_toRightOf="@+id/batx"
                        app:layout_constraintTop_toBottomOf="@+id/nom_shipping" />

                    <TextView
                        android:id="@+id/nom_voucher"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/alexis_gtwalsheim_regular"
                        android:fontFeatureSettings="tnum"
                        android:gravity="right"
                        android:padding="5dp"
                        android:text="- 30.000"
                        android:textColor="@color/white"
                        app:layout_constraintLeft_toRightOf="@+id/rp3"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/nom_shipping" />

                    <View
                        android:id="@+id/view"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="20dp"
                        android:background="@color/white"
                        app:layout_constraintLeft_toRightOf="@+id/batx1"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/nom_voucher" />

                    <TextView
                        android:id="@+id/s4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/alexis_gtwalsheim_regular"
                        android:fontFeatureSettings="tnum"
                        android:text="Total "
                        android:textColor="@color/white"
                        android:layout_marginTop="18dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/view" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/alexis_gtwalsheim_regular"
                        android:fontFeatureSettings="tnum"
                        android:text="(incl PPN)"
                        android:textColor="@color/white1"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="@+id/s4"
                        app:layout_constraintLeft_toRightOf="@id/s4" />

                    <TextView
                        android:id="@+id/rp4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/alexis_gtwalsheim_regular"
                        android:fontFeatureSettings="tnum"
                        android:gravity="right"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="Rp"
                        android:textColor="@color/white"
                        android:layout_marginTop="18dp"
                        app:layout_constraintLeft_toRightOf="@+id/batx"
                        app:layout_constraintTop_toBottomOf="@+id/view" />

                    <TextView
                        android:id="@+id/nom_total"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/alexis_gtwalsheim_regular"
                        android:fontFeatureSettings="tnum"
                        android:gravity="end"
                        android:layout_marginEnd="10dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="60.000"
                        android:textColor="@color/white"
                        android:layout_marginTop="18dp"
                        app:layout_constraintLeft_toRightOf="@+id/rp4"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/view" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/total_savings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@id/card_order_review"
                android:layout_alignParentEnd="true">
                <TextView
                    android:fontFeatureSettings="tnum" android:id="@+id/nom_saving"
                    android:fontFamily="@font/alexis_gtwalsheim_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp 30.000"
                    android:gravity="end"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:alpha="0.7"
                    android:paddingStart="5dp"
                    android:paddingEnd="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>
                <TextView
                    android:fontFeatureSettings="tnum" android:fontFamily="@font/alexis_gtwalsheim_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="total savings >"
                    android:gravity="right"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:alpha="0.7"
                    android:paddingStart="5dp"
                    android:paddingEnd="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/nom_saving"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/total_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_below="@id/total_savings">

                <TextView
                    android:id="@+id/nom_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alexis_gtwalsheim_regular"
                    android:fontFeatureSettings="tnum"
                    android:gravity="end"
                    android:paddingStart="5dp"
                    android:paddingEnd="0dp"
                    android:text="3.223 gr"
                    android:textColor="@color/white"
                    android:alpha="0.7"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alexis_gtwalsheim_regular"
                    android:fontFeatureSettings="tnum"
                    android:gravity="end"
                    android:paddingStart="5dp"
                    android:text="total weight"
                    android:textColor="@color/white"
                    android:alpha="0.7"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/nom_weight"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </RelativeLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/lemid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.4" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/xlemid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.63" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/schmid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.5" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/bll"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/lemid"
                app:layout_constraintTop_toBottomOf="@id/xlemid">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/no_mid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.5" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/line_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.6" />

                <ImageView
                    android:id="@+id/i_payment"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@drawable/ic_payment_transparent"
                    app:layout_constraintBottom_toTopOf="@id/line_text"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/no_mid"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/t_return"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:fontFamily="@font/alexis_gtwalsheim_light"
                    android:fontFeatureSettings="tnum"
                    android:gravity="center"
                    android:text="Payment"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/no_mid"
                    app:layout_constraintTop_toBottomOf="@+id/line_text" />

                <ImageView
                    android:id="@+id/i_contact"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@drawable/ic_contact"
                    app:layout_constraintBottom_toTopOf="@id/line_text"
                    app:layout_constraintLeft_toRightOf="@+id/no_mid"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/t_contact"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:fontFamily="@font/alexis_gtwalsheim_light"
                    android:fontFeatureSettings="tnum"
                    android:gravity="center"
                    android:text="Contact"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/no_mid"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/line_text" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <RelativeLayout
                android:id="@+id/layout_submit"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_margin="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/bll"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/schmid">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/top_ccc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.2" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/btn_submit"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="@drawable/rounder_submit_yellow"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/top_ccc">

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/gilding"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            app:lottie_loop="true"
                            app:lottie_rawRes="@raw/arrow_submit_button" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </RelativeLayout>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.7"
                android:backgroundTint="@color/white1"
                android:fontFamily="@font/alexis_gtwalsheim_light"
                android:text="get Reseller Cashback Voucher Rp 20,000\nterms and conditions apply"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@+id/layout_submit"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/info_weight"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/layout_submit"
                app:layout_constraintLeft_toRightOf="@+id/bll"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/fenx"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rounder_black_background"
                    android:padding="5dp">

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/infomid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.5" />

                    <TextView
                        android:id="@+id/w1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/alexis_gtwalsheim_regular"
                        android:fontFeatureSettings="tnum"
                        android:gravity="right"
                        android:paddingLeft="5dp"
                        android:text="product weight"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/infomid"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/w2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/alexis_gtwalsheim_regular"
                        android:fontFeatureSettings="tnum"
                        android:gravity="right"
                        android:paddingLeft="5dp"
                        android:text="packaging weight"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/infomid"
                        app:layout_constraintTop_toBottomOf="@+id/w1" />

                    <TextView
                        android:id="@+id/product_weight"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/alexis_gtwalsheim_regular"
                        android:fontFeatureSettings="tnum"
                        android:gravity="right"
                        android:paddingRight="5dp"
                        android:text="2.750 gr"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        app:layout_constraintLeft_toRightOf="@+id/infomid"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/package_weight"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/alexis_gtwalsheim_regular"
                        android:fontFeatureSettings="tnum"
                        android:gravity="right"
                        android:paddingRight="5dp"
                        android:text="500 gr"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        app:layout_constraintLeft_toRightOf="@+id/infomid"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/w1" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/alexis_gtwalsheim_regular"
                        android:fontFeatureSettings="tnum"
                        android:gravity="center"
                        android:paddingRight="5dp"
                        android:text="We will refund any excess shipment charges if occurs"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/w2" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alexis_gtwalsheim_regular"
                    android:fontFeatureSettings="tnum"
                    android:text="▲"
                    android:textColor="@color/black"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/fenx"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_up_1stpurchase"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <com.github.mmin18.widget.RealtimeBlurView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:realtimeBlurRadius="20dp"
            app:realtimeOverlayColor="@color/transparent_expanmenu" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/va_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.75"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/va_bo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.9"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/va_le"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/va_ri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounder_white_transparent"
            android:padding="15dp"
            app:layout_constraintLeft_toRightOf="@id/va_le"
            app:layout_constraintRight_toLeftOf="@id/va_ri"
            app:layout_constraintBottom_toTopOf="@id/va_bo">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/va_mi0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.6"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/va_mi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.7"/>

            <TextView
                android:fontFeatureSettings="tnum" android:fontFamily="@font/alexis_gtwalsheim_regular"
                android:id="@+id/t_info"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:paddingBottom="10dp"
                android:text="@string/en_info1st_purchase"
                android:justificationMode="inter_word"
                android:gravity="center|left"
                android:textColor="@color/white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/va_mi0"
                tools:ignore="RtlHardcoded" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@+id/t_info"
                app:layout_constraintBottom_toBottomOf="@id/t_info"
                app:layout_constraintLeft_toRightOf="@+id/va_mi"
                app:layout_constraintRight_toRightOf="parent">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/ho_mi1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.3"/>

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/ho_mi2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.65"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@drawable/ic_size"
                    app:tint="@color/white"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/ho_mi1"/>

                <TextView
                    android:fontFeatureSettings="tnum"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text="Size"
                    android:gravity="center|top"
                    android:textColor="@color/white"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ho_mi1"
                    app:layout_constraintBottom_toTopOf="@+id/ho_mi2"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/ok_1stpurchase"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/rounder_button_whiteborder_25dp"
                    app:layout_constraintTop_toBottomOf="@+id/ho_mi2"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_check"
                        android:layout_margin="10dp"
                        android:padding="3dp"
                        app:tint="@color/white" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
