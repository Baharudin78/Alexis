<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottomsheet_sizer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:background="@drawable/rounder_bottomsheet"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:fontFeatureSettings="tnum" android:id="@+id/title"
                android:fontFamily="@font/alexis_gtwalsheim_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Delivery"/>
            <ImageView android:id="@+id/image"
                android:layout_width="170dp"
                android:padding="10dp"
                android:layout_height="170dp"
                android:src="@drawable/ic_delivery_menu"
                app:tint="@color/black" />
            <TextView
                android:fontFeatureSettings="tnum" android:fontFamily="@font/alexis_gtwalsheim_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lorem_ipsum"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
